<Window x:Class="Tetris.ChooseLevelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Level" Height="200" Width="300" WindowStartupLocation="CenterOwner"
        Background="Beige">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
        <TextBlock Text="Select Difficulty Level:" FontSize="16" Margin="0,10" FontWeight="Bold" HorizontalAlignment="Center" />
        <ComboBox Name="LevelComboBox" Width="200" Height="30" Margin="0,10">
            <ComboBoxItem Content="Level 1 (Easy)" />
            <ComboBoxItem Content="Level 2" />
            <ComboBoxItem Content="Level 3" />
            <ComboBoxItem Content="Level 4 (Hard)" />
        </ComboBox>
        <Border BorderBrush="#895219" Background="#895129" BorderThickness="1" CornerRadius="6" Height="40" Width="150" Padding="2" Margin="10" Grid.Row="2">
            <Button Foreground="WhiteSmoke" BorderBrush="Transparent" Background="Transparent" FontWeight="Bold" FontSize="22" Name="ConfirmButton" Content="Confirm" Click="ConfirmButton_Click" />
        </Border>
        
    </StackPanel>
</Window>
