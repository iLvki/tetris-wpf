<Window x:Class="tetris_nowy.GetUsernameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tetris_nowy"
        mc:Ignorable="d"
        Title="Podaj swoją nazwę" Height="300" Width="350">
    <Grid Margin="0,0,-10,-6" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Enter username:" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <TextBox x:Name="usernameTextBox" Height="40" Width="240" FontSize="16" TextAlignment="Center" Grid.Row="1"/>
        <Border BorderBrush="#895219" Background="#895129" BorderThickness="1" CornerRadius="6" Height="40" Width="150" Padding="0" Margin="10" Grid.Row="2">
            <Button Foreground="WhiteSmoke" Background="Transparent" FontWeight="Bold" BorderBrush="Transparent" VerticalAlignment="Center" Content="Confirm" FontSize="22" Click="Button_Click" Grid.Row="2" />
        </Border>
        

    </Grid>
</Window>
